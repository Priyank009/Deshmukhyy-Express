<%- include("../header") -%>

    <link rel="stylesheet" href="/stylesheets/app/request.css">

    <div class="d-flex justify-content-center">
        <h5>User Dashboard</h5>
    </div>

    <div id="order-details"></div>

    <div class="d-flex justify-content-center">
