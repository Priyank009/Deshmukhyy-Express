                </tr>
                <tr class="table-danger">
                    <th scope="row">1</th>
                    <td>Biryani</td>
                    <td>Delivery</td>
                    <td>14:00</td>
                    <td>45</td>
                    <td><select class="custom-select" name="status">
                            <option selected="" value="approved">Approved</option>
