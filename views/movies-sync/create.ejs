<%- include("../header") -%>

<link rel="stylesheet" href="/stylesheets/movies-sync/style.css">

<div class="d-flex justify-content-center">
    <h5>Add new movie</h5>
</div>

<div class="d-flex justify-content-center card-container">
    <form class="col-12 col-md-6 justify-content-center form-container" id="movie-form">
        <div class="mb-3">
            <label for="title" class="form-label">Title for the movie</label>
            <input required type="text" class="form-control" placeholder="Enter title" name="title" id="title">
        </div>
        <div class="mb-3">
            <label for="genre" class="form-label">Genre of the movie</label>
            <input required type="text" class="form-control" placeholder="Enter genre" name="genre" id="genre">
        </div>

        <div class="mb-3">
            <label for="rating-selector" class="form-label">
                Rate out of 5
            </label>
            <input required type="range" class="form-range w-100" min="0" max="5" step="1" value="4" name="rating" id="rating-selector">
            <div id="range-value" class="text-sm-right text-muted">4</div>
        </div>

        <div class="mb-3">
            <label for="director" class="form-label">Director</label>
            <input required type="text" class="form-control" placeholder="Enter director's name" name="director" id="director">
        </div>

        <div class="mb-3">
            <label for="year" class="form-label">Year of the movie</label>
            <input required type="number" class="form-control" placeholder="Enter year of release" name="releaseYear" id="year">
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">
                Submit
            </button>
        </div>
    </form>
</div>

<script src="/javascript/movies-sync/index.js"></script>

<%- include("../footer") -%>